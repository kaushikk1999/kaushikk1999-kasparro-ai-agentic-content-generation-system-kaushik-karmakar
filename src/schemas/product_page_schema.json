{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$comment": "Phase 4 strict output contract",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "meta": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "generated_by": {
                    "type": "string"
                }
            },
            "required": [
                "generated_by"
            ]
        },
        "hero": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "title"
            ]
        },
        "details": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ingredients": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "benefits": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "ingredients",
                "benefits"
            ]
        },
        "usage": {
            "type": "string"
        },
        "safety": {
            "type": "string"
        },
        "pricing": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "currency": {
                    "type": "string"
                },
                "amount": {
                    "type": "integer"
                }
            },
            "required": [
                "currency",
                "amount"
            ]
        }
    },
    "required": [
        "meta",
        "hero",
        "details",
        "usage",
        "safety",
        "pricing"
    ]
}